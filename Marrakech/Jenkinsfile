pipeline {
  agent any

  stages {
    stage('Build') {
      steps {
        bat 'mvn package ./Marrakech/'
      }
    }
    
    stage('Make Container') {
      steps {
      	bat "docker build -t snscaimito/ledger-service:${env.BUILD_ID} ./Marrakech/"
      	bat "docker tag snscaimito/ledger-service:${env.BUILD_ID} snscaimito/ledger-service:latest"
      }
    }
  }
}